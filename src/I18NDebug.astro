---
interface Props {
    key: string;
    params?: string[];
}

const { key, params } = Astro.props as Props;

const isDev = process.env.NODE_ENV === "development";
---

{
    isDev ? (
        <span data-id="debug-tooltip" class="debug-container group">
            <span data-id="debug-tooltip-trigger" class="debug-trigger">
                <slot />
            </span>
            <span class="debug-tooltip-content">
                <span class="debug-header">
                    @ariaskit/astro-i18n |{" "}
                    <span class="text-yellow">DEBUG</span>
                </span>

                <span class="debug-row">
                    <span class="text-cyan">key</span>:
                    <span class="debug-badge">{key}</span>
                </span>

                {params && (
                    <span class="debug-row">
                        <span class="text-cyan">params</span>:
                        <span class="debug-badge">{params.join(" | ")}</span>
                    </span>
                )}
            </span>
        </span>
    ) : (
        <slot />
    )
}

<style>
    /* Contenedor Principal */
    .debug-container {
        position: relative;
        /* Cambiado a inline para que fluya con el texto del párrafo */
        display: inline;
    }

    /* Trigger y efecto sobre el slot */
    .debug-trigger {
        display: inline;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 2px;
    }

    .debug-container:hover .debug-trigger {
        background-color: rgba(234, 179, 8, 0.15); /* yellow-500/15 */
        box-shadow: 0 0 0 2px rgba(234, 179, 8, 0.1);
    }

    /* Tooltip Box */
    .debug-tooltip-content {
        position: absolute;
        left: 50%;
        /* Usamos em para que la posición sea relativa al tamaño de fuente del texto */
        top: 1.4em;
        z-index: 50;
        display: flex;
        flex-direction: column;
        width: max-content;
        min-width: 140px;
        transform: translateX(-50%) scale(0.95);
        background-color: #1e293b; /* slate-800 */
        color: white;
        font-family:
            ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
        font-size: 0.75rem;
        line-height: 1.4;
        padding: 0.6rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.375rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.4);
        visibility: hidden;
        opacity: 0;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
        pointer-events: none;
        text-align: left;
    }

    /* Hover State */
    .debug-container:hover .debug-tooltip-content {
        visibility: visible;
        opacity: 1;
        transform: translateX(-50%) scale(1);
    }

    /* Header */
    .debug-header {
        font-weight: 600;
        padding-bottom: 0.4rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0.7;
        margin-bottom: 0.4rem;
        display: block;
        white-space: nowrap;
    }

    /* Filas de datos */
    .debug-row {
        display: block;
        margin-top: 0.3rem;
    }

    /* Badges y Colores */
    .debug-badge {
        padding: 0.1rem 0.3rem;
        background-color: rgba(244, 114, 182, 0.15); /* pink-400/15 */
        color: #f472b6; /* pink-400 */
        border-radius: 3px;
        margin-left: 0.2rem;
        word-break: break-all;
    }

    .text-yellow {
        color: #fde047;
    } /* yellow-300 */
    .text-cyan {
        color: #22d3ee;
    } /* cyan-400 */
</style>
