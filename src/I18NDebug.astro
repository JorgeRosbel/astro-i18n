---
interface Props {
    key: string;
    params?: string[];
}

const { key, params } = Astro.props as Props;

const isDev = process.env.NODE_ENV === "development";
---

{
    isDev ? (
        <span data-id="debug-tooltip" class="debug-container group">
            <span
                data-id="debug-tooltip-trigger"
                class="debug-trigger"
            >
                <slot />
            </span>
            <span class="debug-tooltip-content">
                <span class="debug-header">
                    @ariaskit/astro-i18n | <span class="text-yellow">DEBUG</span>
                </span>
                
                <span class="debug-row">
                    <span class="text-cyan">key</span>:
                    <span class="debug-badge">
                        {key}
                    </span>
                </span>

                {params && (
                    <span class="debug-row">
                        <span class="text-cyan">params</span>:
                        <span class="debug-badge">
                            {params.join(" | ")}
                        </span>
                    </span>
                )}
            </span>
        </span>
    ) : (
        <slot />
    )
}

<style>
    /* Contenedor Principal */
    .debug-container {
        position: relative;
        display: inline-block;
    }

    /* Trigger y efecto sobre el slot */
    .debug-trigger {
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .debug-container:hover .debug-trigger {
        opacity: 0.8;
        background-color: rgba(234, 179, 8, 0.1); /* yellow-500/10 */
    }

    /* Tooltip Box */
    .debug-tooltip-content {
        position: absolute;
        left: 50%;
        top: 100%;
        z-index: 50;
        margin-top: 0.5rem;
        display: flex;
        flex-direction: column;
        width: max-content;
        transform: translateX(-50%) scale(0.95);
        background-color: #1e293b; /* slate-800 */
        color: white;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 0.8rem;
        padding: 0.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.25rem;
        visibility: hidden;
        opacity: 0;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
        pointer-events: none;
    }

    /* Hover State */
    .debug-container:hover .debug-tooltip-content {
        visibility: visible;
        opacity: 1;
        transform: translateX(-50%) scale(1);
    }

    /* Header */
    .debug-header {
        font-weight: 600;
        padding-bottom: 0.25rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        opacity: 0.65;
        margin-bottom: 0.5rem;
    }

    /* Filas de datos */
    .debug-row {
        margin-top: 0.5rem;
        text-align: center;
        padding-bottom: 0.25rem;
    }

    /* Badges y Colores */
    .debug-badge {
        padding: 0.125rem 0.25rem;
        background-color: rgba(244, 114, 182, 0.15); /* pink-400/15 */
        color: #f472b6; /* pink-400 */
        border-radius: 0.25rem;
        margin-left: 0.25rem;
    }

    .text-yellow { color: #fde047; } /* yellow-300 */
    .text-cyan { color: #22d3ee; }   /* cyan-400 */
</style>